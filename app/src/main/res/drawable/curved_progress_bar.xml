<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="15dip"/>
                <solid android:color="@color/fade_blue_line_color"/>

        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="25dip" />
                <gradient
                    android:startColor="@color/onboarding_button_color"
                    android:centerColor="@color/fade_blue_line_color"
                    android:centerY="0.75"
                    android:endColor="@color/black"
                    android:gradientRadius="15dip"
                    android:angle="270"

                    />
            </shape>
        </clip>
    </item>


    <item
        android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <corners
                    android:radius="25dip" />
                <gradient
                    android:startColor="@color/onboarding_button_color"
                    android:endColor="@color/onboarding_button_color"
                    android:gradientRadius="15dip"
                    android:centerY="0.75"
                    android:angle="270" />
            </shape>
        </clip>
    </item>
</layer-list>